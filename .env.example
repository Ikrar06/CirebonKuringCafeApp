# ===========================================
# CAFE MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Database URL for migrations (if needed)
DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# ===========================================
# APPLICATION URLS (for CORS and redirects)
# ===========================================
# Development URLs
NEXT_PUBLIC_CUSTOMER_WEB_URL=http://localhost:3000
NEXT_PUBLIC_OWNER_DASHBOARD_URL=http://localhost:3001
NEXT_PUBLIC_EMPLOYEE_PORTAL_URL=http://localhost:3002

# Production URLs (update when deployed)
# NEXT_PUBLIC_CUSTOMER_WEB_URL=https://customer.your-cafe.com
# NEXT_PUBLIC_OWNER_DASHBOARD_URL=https://dashboard.your-cafe.com
# NEXT_PUBLIC_EMPLOYEE_PORTAL_URL=https://employee.your-cafe.com

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================
# Cafe basic information
NEXT_PUBLIC_CAFE_NAME="Cafe Management System"
NEXT_PUBLIC_CAFE_ADDRESS="Jl. Example No. 123, Kendari, Sulawesi Tenggara"
NEXT_PUBLIC_CAFE_PHONE="+62812345678"
NEXT_PUBLIC_CAFE_EMAIL="info@yourcafe.com"

# GPS coordinates for attendance validation (Kendari example)
NEXT_PUBLIC_CAFE_LATITUDE=-3.9778
NEXT_PUBLIC_CAFE_LONGITUDE=122.5152
NEXT_PUBLIC_GPS_RADIUS=100

# Business hours (24-hour format)
NEXT_PUBLIC_BUSINESS_HOURS_OPEN="07:00"
NEXT_PUBLIC_BUSINESS_HOURS_CLOSE="22:00"

# ===========================================
# PAYMENT CONFIGURATION
# ===========================================
# Tax rate (PPN 11% in Indonesia)
NEXT_PUBLIC_TAX_RATE=0.11
NEXT_PUBLIC_SERVICE_CHARGE_RATE=0.05

# Payment methods enabled
NEXT_PUBLIC_ENABLE_CASH=true
NEXT_PUBLIC_ENABLE_QRIS=true
NEXT_PUBLIC_ENABLE_BANK_TRANSFER=true
NEXT_PUBLIC_ENABLE_CARD=false

# QRIS Configuration (if you have static QRIS)
NEXT_PUBLIC_QRIS_MERCHANT_NAME="Your Cafe Name"
NEXT_PUBLIC_QRIS_CODE="00020101021226..."

# Bank transfer details
NEXT_PUBLIC_BANK_BCA_NUMBER="1234567890"
NEXT_PUBLIC_BANK_BCA_NAME="Your Cafe Name"
NEXT_PUBLIC_BANK_BNI_NUMBER="1234567890"
NEXT_PUBLIC_BANK_BNI_NAME="Your Cafe Name"
NEXT_PUBLIC_BANK_MANDIRI_NUMBER="1234567890"
NEXT_PUBLIC_BANK_MANDIRI_NAME="Your Cafe Name"

# ===========================================
# TELEGRAM INTEGRATION
# ===========================================
# Telegram bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=123456789:AAABBBCCCDDDEEEFFFGGGHHHIIIJJJKKKLLL

# Owner telegram chat ID (get from @userinfobot)
TELEGRAM_OWNER_CHAT_ID=123456789

# Default notifications enabled
NEXT_PUBLIC_ENABLE_TELEGRAM_NOTIFICATIONS=true

# ===========================================
# FILE UPLOAD & STORAGE
# ===========================================
# Maximum file sizes (in MB)
NEXT_PUBLIC_MAX_IMAGE_SIZE=5
NEXT_PUBLIC_MAX_RECEIPT_SIZE=2

# Allowed file types
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"
NEXT_PUBLIC_ALLOWED_RECEIPT_TYPES="image/jpeg,image/png,application/pdf"

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================
# JWT settings (handled by Supabase, these are for custom needs)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Session timeout (in hours)
NEXT_PUBLIC_SESSION_TIMEOUT=8

# Password requirements
NEXT_PUBLIC_MIN_PASSWORD_LENGTH=8
NEXT_PUBLIC_REQUIRE_PASSWORD_UPPERCASE=true
NEXT_PUBLIC_REQUIRE_PASSWORD_NUMBERS=true
NEXT_PUBLIC_REQUIRE_PASSWORD_SYMBOLS=false

# ===========================================
# OPERATIONAL SETTINGS
# ===========================================
# Attendance settings
NEXT_PUBLIC_ATTENDANCE_GRACE_PERIOD=15
NEXT_PUBLIC_OVERTIME_AUTO_APPROVE_HOURS=2

# Stock settings
NEXT_PUBLIC_LOW_STOCK_THRESHOLD=10
NEXT_PUBLIC_AUTO_REORDER_ENABLED=false

# Order settings
NEXT_PUBLIC_ORDER_TIMEOUT_MINUTES=30
NEXT_PUBLIC_MAX_ITEMS_PER_ORDER=20

# Cash reconciliation
NEXT_PUBLIC_CASH_VARIANCE_TOLERANCE=10000
NEXT_PUBLIC_DEFAULT_CASH_STARTING_AMOUNT=500000

# ===========================================
# AI & ANALYTICS
# ===========================================
# Enable AI features
NEXT_PUBLIC_ENABLE_AI_PRICING=true
NEXT_PUBLIC_ENABLE_AI_STOCK_PREDICTION=true

# Pricing AI settings
NEXT_PUBLIC_AI_MIN_MARGIN=0.60
NEXT_PUBLIC_AI_MAX_MARGIN=0.70
NEXT_PUBLIC_AI_DEFAULT_MARGIN=0.65

# Weather API for stock prediction (optional)
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================
# Environment
NODE_ENV=development
ENVIRONMENT=development

# Debug settings
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# Database debugging
SUPABASE_DEBUG=false
DATABASE_LOGGING=false

# ===========================================
# FLUTTER TABLET APP SETTINGS
# ===========================================
# API endpoints for Flutter apps
NEXT_PUBLIC_API_BASE_URL=http://localhost:54321/functions/v1

# Device authentication
NEXT_PUBLIC_DEVICE_LOGIN_ENABLED=true
NEXT_PUBLIC_DEVICE_SESSION_TIMEOUT=12

# Tablet-specific settings
NEXT_PUBLIC_TABLET_AUTO_REFRESH=30
NEXT_PUBLIC_TABLET_FULL_SCREEN=true

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Enable audit logging
NEXT_PUBLIC_ENABLE_AUDIT_LOGS=true

# Performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Error tracking (Sentry, etc.)
# SENTRY_DSN=https://your-sentry-dsn
# SENTRY_ENVIRONMENT=development

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
# Backup settings
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System sedang dalam perbaikan. Mohon tunggu beberapa saat."

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# Email service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# SMS service (optional)
# SMS_API_KEY=your-sms-api-key
# SMS_PROVIDER=twillio

# ===========================================
# NOTES
# ===========================================
# 1. Copy this file to .env.local for Next.js development
# 2. Update the Supabase URLs and keys from your project
# 3. Set your actual business information
# 4. Configure payment methods based on your needs
# 5. Get Telegram bot token from @BotFather
# 6. Test all configurations before production deployment

